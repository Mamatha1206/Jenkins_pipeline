pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo "Cloning repository from GitHub..."
                git branch: 'main', 
                    credentialsId: 'github-creds', 
                    url: 'https://github.com/Mamatha1206/Jenkins_pipeline.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
                sh 'npm install'  // Modify as needed
            }
        }

        stage('Run Tests') {
            steps {
                echo "Running tests..."
                sh 'npm test'  // Modify for your project
            }
        }

        stage('Build Application') {
            steps {
                echo "Building the application..."
                sh 'npm run build'  // Modify as needed
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo "Archiving build artifacts..."
                archiveArtifacts artifacts: 'build/**', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "✅ BUILD SUCCESSFUL: The pipeline completed successfully!"
        }
        failure {
            echo "❌ BUILD FAILED: Check the logs for errors."
        }
    }
}



